{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "declaration": true,
    "lib": [
      "es6",
      "dom"
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/*"
  ],
  "include": [
    "./src/**/**/*"
  ]
}
